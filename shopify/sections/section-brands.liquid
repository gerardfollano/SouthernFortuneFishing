<div class="container mb-12 md:mb-24 {{css_classes}}">
    {% if section.settings.headline %}
      <div class="text-2xl lg:text-3xl font-bold text-center mb-1 md:mb-3">
        {{ section.settings.headline }}
      </div>
    {% endif %}
  
    <div class="grid sm:grid-cols-3 lg:grid-cols-5 gap-4 content-center">
      {% for block in section.blocks %}
        {% render 'section-image',
          class: ''
          image: block.settings.image
        %}
      {% endfor %}
    </div>
  </div>
  
  {% schema %}
  {
    "name": "t:sections.brands-row.name",
    "class": "shopify-section-vue",
    "settings": [
      {
        "type": "text",
        "id": "classes",
        "label": "Classes",
        "default": "Seperate classes by space"
      },
      {
        "type": "text",
        "id": "headline",
        "label": "t:common.headline",
        "default": "Our store"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "t:common.image",
        "limit": 10,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "t:common.image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.brands-row.name",
        "category": "Images",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
  {% endschema %}